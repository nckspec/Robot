import socket
import pygame
import sys
import os
import pygame.display
import time

pygame.init()

HOST = '192.168.1.73'  # The server's hostname or IP address
PORT = 2256        # The port used by the server

key = ' '

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect((HOST, PORT))

while True:



    for event in pygame.event.get():



            if event.type == pygame.QUIT:
                sys.exit()
            if event.type == pygame.KEYDOWN:

                if event.key == pygame.K_w and isKeysPressed(event.key) == True:
                    s.sendall('w')

                elif event.key == pygame.K_a and isKeysPressed(event.key) == True:
                    s.sendall('a')

                elif event.key == pygame.K_d and isKeysPressed(event.key) == True:
                    s.sendall('d')

            elif event.type == pygame.KEYUP:

                if event.key == pygame.K_w:
                    s.sendall('sw')

                elif event.key == pygame.K_a:
                    s.sendall('sa')

                elif event.key == pygame.K_d:
                    s.sendall('sd')


def isKeysPressed(button):

    keys = pygame.key.get_pressed()
    for x in keys:
        if button != x and x == True:
            return True

    return False









